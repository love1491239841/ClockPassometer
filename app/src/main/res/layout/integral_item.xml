<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="180dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/co_sp_shape">
    <ImageView
        android:id="@+id/sp_image"
        android:layout_width="120dp"
        android:layout_height="80dp" />
    <TextView
        android:id="@+id/sp_name"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="#000000" />
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sp_price"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1000积分"
            android:textColor="@color/commodity_time"/>
        <Button
            android:id="@+id/sp_dh"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:background="@drawable/button_shapeb"
            android:text="兑换"
            android:textColor="@color/commodity_button"/>
    </LinearLayout>

</LinearLayout>
